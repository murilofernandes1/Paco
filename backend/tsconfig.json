{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "src/controllers/Users/Register.js",
    "src/index.js",
    "src/app.js",
    "src/routes/userRoutes.js"
  ],
  "exclude": ["node_modules", "dist"]
}
